{
  "appId": "com.imageoptimizer.app",
  "productName": "Image Optimizer",
  "directories": {
    "output": "release",
    "buildResources": "buildResources"
  },
  "files": [
    "dist/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "extraMetadata": {
    "main": "dist/main/main.js"
  },
  "asar": true,
  "win": {
    "target": ["nsis", "portable"]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}